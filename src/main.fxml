<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" style="-fx-border-width: 5 5 5 5; -fx-border-color: transparent;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
   <top>
      <FlowPane hgap="5.0" style="-fx-border-color: aaaaaa; -fx-border-width: 0 0 2 0;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Utente attuale:" />
            <TextField fx:id="userName" />
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleButtonAction" text="Login" />
            <Label fx:id="errorLabel" prefHeight="15.0" prefWidth="246.0" />
         </children>
      </FlowPane>
   </top>
   <bottom>
      <HBox prefHeight="27.0" prefWidth="590.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="25.0" prefWidth="90.0" text="indietro" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
